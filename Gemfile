source 'http://rubygems.org'
source 'http://gems.github.com'

gem 'rails', '3.1.3'

gem 'pg'
gem 'sqlite3'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'coffee-rails', '~> 3.1.1'
  gem 'sass-rails',   '~> 3.1.5'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'pry'
  gem 'rspec-rails'
  gem 'wirble'
end


